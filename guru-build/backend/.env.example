# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/guru_db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Spotify API Configuration (Legacy - being replaced by Podcast Index)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Podcast Index API Configuration (Free podcast API - recommended)
# Sign up at https://podcastindex.org/signup
PODCAST_INDEX_API_KEY=your_podcast_index_api_key
PODCAST_INDEX_API_SECRET=your_podcast_index_api_secret

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude API Configuration (for AI Scheduling Agent)
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Application Settings
SECRET_KEY=your_secret_key_for_jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Environment
ENVIRONMENT=development
DEBUG=True
